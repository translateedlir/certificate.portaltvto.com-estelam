function postAjax(href_url,form_id,div_id)
{
  //var postUrl = $("#"+form_id).attr('action');
  
  $.post(  
  	  href_url,  
	  $("#"+form_id).serialize(),  
	  function(responseText)
	  {
	  	$("#"+div_id).html(responseText);
  	  },  
  	   "html"  
  );  
}



function getAjax(href_url,div_id)
{
  $("#"+div_id)
  .load(href_url, null, function(responseText,msg,xhrObj){
   });
}


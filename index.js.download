function a_rel_get_sajadAjax(div_id)
{
  $('a[rel|="sajadAjax"]').unbind('click');
  
  $('a[rel|="sajadAjax"]').click(function()
  {
  	getAjax(this.href,div_id);
  	return false;
  });
}

function a_pagination_post_Ajax(div_id,form_id)
{
	
  $('.pagination_tag_open a, .pagination a, .cform_sort_field a').unbind('click');
  
  $('.pagination_tag_open a, .pagination a, .cform_sort_field a').click(function()
  {
	  //postAjax(,form_id,div_id);
	  
	    $.post(  
			  this.href,  
			  $("#"+form_id).serialize()+'&cform_sort_link='+$(this).attr('id'),  
			  function(responseText)
			  {
				$("#"+div_id).html(responseText);
				FarsiType.init();
			  },  
			   "html"  
		  );  

	  return false;
	  //postAjax(div_id,form_id);
  });
  
}

